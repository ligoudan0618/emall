page {
  padding-bottom: 90rpx;
}
.detail-img image {
  width: 100%;
}
.product {
  padding: 0 30rpx 30rpx;
}
.product .product-name {
  font-size: 32rpx;
}
.product .product-origin {
  color: #666;
  font-size: 24rpx;
}
.product .product-price {
  display: flex;
  justify-content: flex-end;
}
.product .product-price text {
  color: #868648;
}
.product-explain {
  background-color: white;
  padding: 30rpx;
}
.product-explain .explain-card {
  border: 2rpx solid #eee;
  border-radius: 10rpx;
  box-shadow: 2rpx 2rpx 5rpx rgba(0, 0, 0, 0.1);
  padding: 0 15rpx;
}
.product-explain .explain-card .explain-header {
  padding: 30rpx 10rpx 30rpx 10rpx;
  border-bottom: 2rpx solid #eee;
  color: #666;
}
.product-explain .explain-card .explain-header text {
  margin-right: 10rpx;
  color: #5ed65e;
}
.product-explain .explain-card .explain-body {
  display: flex;
  justify-content: space-between;
  padding: 20rpx 0;
}
.product-explain .explain-card .explain-body .review {
  display: flex;
}
.product-info {
  margin-top: 20rpx;
}
.product-info .product-info-title {
  display: flex;
  justify-content: center;
  font-size: 36rpx;
  font-weight: 700;
  margin-bottom: 20rpx;
}
.btm-tool {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 90rpx;
  display: flex;
  border-top: 1rpx solid #ccc;
}
.btm-tool .tool-item {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
}
.btm-tool .tool-item.btn-cart {
  background: #fce291;
  opacity: 0.8;
}
.btm-tool .tool-item.btn-buy {
  background: #f9dc64;
}
