page {
  background: #f8f6f6;
}
.product-info-wrap {
  display: flex;
  padding: 20rpx;
  margin-top: 10rpx;
  border-bottom: 1rpx solid #eee;
  background: white;
}
.product-info-wrap .img {
  flex: 2;
}
.product-info-wrap .product-info {
  flex: 5;
  margin-left: 25rpx;
  padding-top: 20rpx;
}
.product-info-wrap .product-info .product-name {
  color: #666;
}
.product-info-wrap .product-info .product-price {
  font-weight: 500;
}
.review-wrap {
  margin-top: 20rpx;
  background: white;
}
.review-wrap .review-count {
  padding-left: 25rpx;
  color: #666;
  font-size: 30rpx;
  font-weight: 500;
}
.review-wrap .review-list .review-list-item {
  display: flex;
  align-items: center;
  padding: 0 25rpx 10rpx;
  margin-top: 20rpx;
}
.review-wrap .review-list .review-list-item image {
  width: 60rpx;
  height: 60rpx;
}
.review-wrap .review-list .review-list-item .user-review {
  flex: 1;
  margin-left: 20rpx;
}
.review-wrap .review-list .review-list-item .user-review .review {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 3;
  overflow: hidden;
}
.review-wrap .review-list .review-list-item .user-review .img-wrap image {
  width: 90rpx;
  height: 90rpx;
  margin-right: 10rpx;
}
