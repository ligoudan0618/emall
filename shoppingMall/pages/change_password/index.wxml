<mp-toptips msg="{{error}}" type="error" show="{{error}}"></mp-toptips>
<view class="review-form">
    <form bindsubmit='changePassWordForm'>
        <mp-cells title="修改密码">
            <mp-cell prop="userName" ext-class="">
                <input name="oldPassword" class="weui-input" placeholder="请输入旧密码" />
            </mp-cell>
            <mp-cell prop="password" ext-class="">
                <input password name="newPassword1" class="weui-input" placeholder="请输入新密码" />
            </mp-cell>
            <mp-cell prop="password" ext-class="">
                <input password name="newPassword2" class="weui-input" placeholder="请确认密码" />
            </mp-cell>
        </mp-cells>
        <view class='change-button'>
            <button size='mini' formType="submit" type='primary'>修改</button>
            <button size='mini' formType="reset" type='primary'>重置</button>
            <button size='mini' type='primary'>忘记密码</button>
        </view>
    </form>
</view>